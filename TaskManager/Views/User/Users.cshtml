@model IEnumerable<ApplicationUserDto>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout_task.cshtml";
}
<link href="~/CSS/StyleUsersControll.css" rel="stylesheet" />

<div class="app">
    <div class="body-add">
        <div>
            <h1>Users</h1>
        </div>

        <div class="table-category">
            <table>
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Date of birth</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ApplicationUserDto user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.DateOfBirth.ToString("dd-MM-yyyy")</td>
                            <td class="form-delete">
                                <a asp-action="UserProfileSetting" asp-controller="User" asp-route-userId="@user.Id" ></a> <button class="delete-edit">Edit</button>
                                <a asp-action="DeleteUserById" asp-controller="User" asp-route-userId="@user.Id" asp-route-typeOperation="adminDelete"><button type="button" class="delete-button">Delete</button></a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


