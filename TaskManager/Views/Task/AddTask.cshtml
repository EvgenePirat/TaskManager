@{
    ViewBag.Title = "Add Task";
    Layout = "~/Views/Shared/_Layout_task.cshtml";
}
<link href="~/CSS/StyleAddTask.css" rel="stylesheet" />
<div class="app">
    <div class="body-add">
        <form asp-controller="User" asp-action="RegistrationPost" method="post">

            <div>
                <h1>Add new Task</h1>
            </div>

            <div class="form-field">
                <input type="text" placeholder="Name" required />
            </div>

            <div class="form-field">
                <input type="text" placeholder="Username" required />
            </div>

            <div class="form-field">
                <input type="email" placeholder="Email" required />
            </div>

            <div class="form-field">
                <input type="password" placeholder="Password" required />
            </div>

            <div class="form-field">
                <input type="date" placeholder="Date Of Birth" required />
            </div>

            <div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="form-field">
                <button class="btn-reg"><a asp-controller="User" asp-action="Enter">Login</a></button>
                <button class="btn" type="submit">Registration</button>
            </div>


        </form>
    </div>
</div>
