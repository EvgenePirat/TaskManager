@model TaskAddRequest
@{
    ViewBag.Title = "Add Task";
    Layout = "~/Views/Shared/_Layout_task.cshtml";
}
<link href="~/CSS/StyleAddTask.css" rel="stylesheet" />
<div class="app">
    <div class="body-add">
        <form asp-controller="User" asp-action="RegistrationPost" method="post">

            <div>
                <h1>Add new Task</h1>
            </div>

            <div class="form-field">
                <input asp-for="Title" type="text" placeholder="Title" required />
            </div>

            <div class="form-field">
                <textarea asp-for="Description" placeholder="Description" required></textarea>
            </div>

            <div class="form-field">
                <input asp-for="FinishTime" type="date" placeholder="Date Of Birth" required />
            </div>

            <div class="form-field">
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    <option value="">Please select Category</option>
                </select>
            </div>

            <input asp-for="Status" type="hidden" value="@Status.Active" required />

            <div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="form-field">
                <button class="btn-reg"><a asp-controller="Task" asp-action="Home">Home</a></button>
                <button class="btn" type="submit">Add</button>
            </div>

        </form>
    </div>
</div>
