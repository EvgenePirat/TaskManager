@using TaskManager.Dto.Users.Request
@model UserAddDto
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout_unknown.cshtml";
}
<link href="~/CSS/StyleRegistration.css" rel="stylesheet" />

<form asp-controller="Account" asp-action="RegistrationPost" method="post">

    <div>
        <h1>Registration</h1>
    </div>

    <div class="form-field">
        <input asp-for="UserName" type="text" placeholder="Username" required />
    </div>

    <div class="form-field">
        <input asp-for="Email" type="email" placeholder="Email" />
    </div>

    <div class="form-field">
        <input asp-for="Password" type="password" placeholder="Password" required />
    </div>

    <div class="form-field">
        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required />
    </div>

    <div class="form-field">
        <input asp-for="DateOfBirth" type="date" placeholder="Date Of Birth" required />
    </div>

    <div class ="form-field">
        <select asp-for="UserType" asp-items="@ViewBag.Roles">
            <option value="Unknown">Please select role</option>
        </select>
    </div>

    <div class="color-red">

        <span asp-validation-for="UserName"></span>

        @if (ViewData["Errors"] != null)
        {
            <div>
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li class="ml">@error</li>
                    }
                </ul>
            </div>
        }
        
    </div>

    <div class="form-field">
        <a asp-controller="Account" asp-action="Enter"><button class="btn-reg" type="button">Login</button></a>
        <button class="btn" type="submit">Registration</button>
    </div>


</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>