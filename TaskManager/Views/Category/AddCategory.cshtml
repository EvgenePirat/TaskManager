@using TaskManager.Dto.Categories.Request
@model CategoryAddDto
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_Layout_task.cshtml";
}
<link href="~/CSS/StyleAddTask.css" rel="stylesheet" />
<div class="app">
    <div class="body-add">
        <form asp-controller="Category" asp-action="AddNewCategoryPost" method="post">

            <div>
                <h1>Add new Category</h1>
            </div>

            <div class="form-field">
                <input asp-for="Name" type="text" placeholder="Name" required />
            </div>

            <div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="form-field">
                <button class="btn-reg"><a asp-controller="Task" asp-action="Home">Home</a></button>
                <button class="btn" type="submit">Add</button>
            </div>

        </form>
    </div>
</div>

